<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.ScanTicketActivity"
    android:background="@color/mainBackground"
    android:padding="15dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainConstraint"
        >

        <TextView
            android:id="@+id/userNameTT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/userNameEtField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/userNameTT"
            app:hintEnabled="false"
            android:background="@drawable/custom_edit_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userNameEt"
                tools:hint="@string/developer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:enabled="false"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/userCollegeTT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="College"
            app:layout_constraintTop_toBottomOf="@id/userNameEtField"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/userCollegeEtField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/userCollegeTT"
            app:hintEnabled="false"
            android:background="@drawable/custom_edit_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userCollegeEt"
                tools:hint="IPU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:enabled="false"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/userMailTT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            app:layout_constraintTop_toBottomOf="@id/userCollegeEtField"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/userMailEtField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/userMailTT"
            app:hintEnabled="false"
            android:background="@drawable/custom_edit_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userMailEt"
                tools:hint="yash@gmail.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:enabled="false"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/eventNameTT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            app:layout_constraintTop_toBottomOf="@id/userMailEtField"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/eventNameEtField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/eventNameTT"
            app:hintEnabled="false"
            android:background="@drawable/custom_edit_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/eventNameEt"
                tools:hint="Utkarsh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:enabled="false"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/finalTT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/eventNameEtField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="User Verified"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo_paaji_2"
            />

        <Button
            android:id="@+id/verifyUserBt"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:text="Verify User"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/finalTT"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/custom_button"
            />

        <Button
            android:id="@+id/scanTicketBt"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:text="Scan Ticket"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/verifyUserBt"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>